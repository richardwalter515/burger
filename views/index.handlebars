<h1>Eat-Da-Burger!</h1>

<div class="toEat">
  <h2>Burgers To Be Eaten</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/unless}}
    {{/each}}
  </ul>

</div>

<div class="eaten">
  <h2>Burgers Devoured</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/if}}
    {{/each}}
  </ul>

</div>

<div class="newBurgerForm">
  <h2>Add a Burger</h2>
  <div class="newBurgerInput">
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
